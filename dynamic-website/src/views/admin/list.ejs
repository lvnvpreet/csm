<%- include('../../layouts/main') %>

<div class="templates-list">
    <h1>Template Management</h1>
    <a href="/admin/templates/new" class="btn-new">New Template</a>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% templates.forEach(template => { %>
                <tr>
                    <td><%= template.name %></td>
                    <td><%= template.isActive ? 'Active' : 'Inactive' %></td>
                    <td><%= template.createdAt.toLocaleDateString() %></td>
                    <td>
                        <a href="/admin/templates/edit/<%= template.id %>">Edit</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>