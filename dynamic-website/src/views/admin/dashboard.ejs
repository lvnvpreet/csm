<% contentFor('styles') %>
<link rel="stylesheet" href="/css/dashboard.css">

<% contentFor('body') %>
<div class="dashboard">
    <div class="dashboard-stats">
        <div class="stat-card">
            <h3>Content</h3>
            <p class="stat-number"><%= typeof contentCount !== 'undefined' ? contentCount : 0 %></p>
            <a href="/admin/content" class="btn btn-primary">Manage Content</a>
        </div>

        <div class="stat-card">
            <h3>Templates</h3>
            <p class="stat-number"><%= typeof templateCount !== 'undefined' ? templateCount : 0 %></p>
            <a href="/admin/templates" class="btn btn-primary">Manage Templates</a>
        </div>

        <div class="stat-card">
            <h3>Media Files</h3>
            <p class="stat-number"><%= typeof mediaCount !== 'undefined' ? mediaCount : 0 %></p>
            <a href="/admin/media" class="btn btn-primary">Manage Media</a>
        </div>
    </div>

    <div class="recent-activity">
        <h2>Recent Activity</h2>
        <div class="activity-list">
            <% if (recentActivities && recentActivities.length > 0) { %>
                <% recentActivities.forEach(activity => { %>
                    <div class="activity-item">
                        <span class="activity-time"><%= activity.timestamp.toLocaleString() %></span>
                        <span class="activity-type"><%= activity.type %></span>
                        <span class="activity-description"><%= activity.description %></span>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No recent activity</p>
            <% } %>
        </div>
    </div>

    <div class="quick-actions">
        <h2>Quick Actions</h2>
        <div class="action-buttons">
            <a href="/admin/content/new" class="btn btn-primary">Create New Content</a>
            <a href="/admin/templates/new" class="btn btn-secondary">Create New Template</a>
            <a href="/admin/media/upload" class="btn btn-secondary">Upload Media</a>
        </div>
    </div>
</div>

<% contentFor('scripts') %>
<script src="/js/dashboard.js"></script>
