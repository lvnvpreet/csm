<%- include('../../layouts/main') %>

<div class="content-list">
    <div class="header-actions">
        <h1>Content Management</h1>
        <a href="/admin/content/new" class="btn btn-primary">Create New Content</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Slug</th>
                <th>Author</th>
                <th>Template</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% contents.forEach(content => { %>
                <tr>
                    <td><%= content.title %></td>
                    <td><%= content.slug %></td>
                    <td><%= content.author %></td>
                    <td><%= content.template %></td>
                    <td><%= content.createdAt.toLocaleDateString() %></td>
                    <td class="actions">
                        <a href="/admin/content/edit/<%= content.id %>" class="btn btn-sm btn-edit">Edit</a>
                        <form action="/admin/content/delete/<%= content.id %>" method="POST" class="inline">
                            <button type="submit" class="btn btn-sm btn-delete" 
                                onclick="return confirm('Are you sure you want to delete this content?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>