<% contentFor('styles') %>
<!-- Add any specific styles for the content list here -->

<% contentFor('body') %>
<div class="content-list">
    <div class="header-actions">
        <h1>Content List</h1>
        <a href="/admin/content/new" class="btn btn-primary">Create New Content</a>
    </div>

    <% if (contents && contents.length > 0) { %>
        <table class="content-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Author</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% contents.forEach(content => { %>
                    <tr>
                        <td><%= content.title %></td>
                        <td><%= content.slug %></td>
                        <td><%= content.author || 'N/A' %></td>
                        <td><%= content.createdAt.toLocaleDateString() %></td>
                        <td>
                            <a href="/admin/content/edit/<%= content.id %>" class="btn btn-sm btn-secondary">Edit</a>
                            <form action="/admin/content/delete/<%= content.id %>" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                            <a href="/page/<%= content.slug %>" class="btn btn-sm btn-info" target="_blank">Preview</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No content found. <a href="/admin/content/new">Create some?</a></p>
    <% } %>
</div>

<% contentFor('scripts') %>
